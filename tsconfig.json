{
    "compilerOptions": {
      "types": ["@webgpu/types"],
      "target": "ES2020", 
      "module": "ESNext", 
      "moduleResolution": "Node", 
      "strict": true, 
      "esModuleInterop": true, 
      "skipLibCheck": true, 
      "forceConsistentCasingInFileNames": true, 
      "outDir": "./dist", 
      "rootDir": "./src", 
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"] 
      }


    },
    "include": ["src/**/*"], 
    "exclude": ["node_modules", "dist"] 
}
